<div class="hero">
    <h1><i class="fas fa-laptop-house"></i> <%= title %></h1>
    <p class="subtitle">Manage your electronics inventory with ease</p>
</div>

<div class="dashboard">
    <div class="dashboard-stats">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-mobile-alt"></i>
            </div>
            <div class="stat-info">
                <h3>Smartphones</h3>
                <p>Latest models in stock</p>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-tablet-alt"></i>
            </div>
            <div class="stat-info">
                <h3>Tablets</h3>
                <p>Portable productivity</p>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-laptop"></i>
            </div>
            <div class="stat-info">
                <h3>Computers</h3>
                <p>Powerful machines</p>
            </div>
        </div>
        
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-gamepad"></i>
            </div>
            <div class="stat-info">
                <h3>Gaming</h3>
                <p>Consoles & accessories</p>
            </div>
        </div>
    </div>

    <div class="actions">
        <a href="/categories" class="btn btn-primary">
            <i class="fas fa-eye"></i> Browse Categories
        </a>
        <a href="/categories/new" class="btn btn-secondary">
            <i class="fas fa-plus"></i> Add New Category
        </a>
    </div>
</div>
