<div class="page-header">
    <h1><i class="fas fa-trash-alt"></i> Delete Item: <%= item.name %></h1>
    <a href="/items/<%= item.id %>" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Item
    </a>
</div>

<div class="warning-container">
    <div class="warning-icon">
        <i class="fas fa-exclamation-triangle"></i>
    </div>
    
    <div class="warning-content">
        <h3>Are you sure you want to delete this item?</h3>
        
        <div class="item-info">
            <p><strong>Name:</strong> <%= item.name %></p>
            <p><strong>Category:</strong> <%= item.category_name %></p>
            <% if (item.brand) { %>
                <p><strong>Brand:</strong> <%= item.brand %></p>
            <% } %>
            <p><strong>Price:</strong> $<%= parseFloat(item.price).toFixed(2) %></p>
            <p><strong>Stock:</strong> <%= item.stock_quantity %> units</p>
            <p><strong>Created:</strong> <%= new Date(item.created_at).toLocaleDateString() %></p>
        </div>

        <div class="alert alert-warning">
            <i class="fas fa-exclamation-circle"></i>
            <strong>Warning:</strong> This action cannot be undone! The item will be permanently removed from the inventory.
        </div>

        <form action="/items/<%= item.id %>?_method=DELETE" method="POST" class="delete-form">
            <div class="form-group">
                <label for="admin_password">Admin Password *</label>
                <input 
                    type="password" 
                    id="admin_password" 
                    name="admin_password" 
                    class="form-control"
                    placeholder="Enter admin password to confirm"
                    required
                >
                <small class="form-text">For security, enter the admin password to confirm deletion.</small>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure? This cannot be undone!')">
                    <i class="fas fa-trash"></i> Delete Item
                </button>
                <a href="/items/<%= item.id %>" class="btn btn-secondary">
                    <i class="fas fa-times"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
