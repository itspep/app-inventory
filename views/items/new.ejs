<div class="page-header">
    <h1><i class="fas fa-plus-circle"></i> Create New Item</h1>
    <div class="breadcrumb">
        <a href="/items"><i class="fas fa-arrow-left"></i> Back to All Items</a>
        <% if (item.category_id) { %>
            | <a href="/categories/<%= item.category_id %>">Back to Category</a>
        <% } %>
    </div>
</div>

<div class="form-container">
    <form action="/items" method="POST" class="form">
        <div class="form-row">
            <div class="form-group">
                <label for="category_id">Category *</label>
                <select id="category_id" name="category_id" class="form-control" required>
                    <option value="">Select a category</option>
                    <% categories.forEach(cat => { %>
                        <option value="<%= cat.id %>" <%= item.category_id == cat.id ? 'selected' : '' %>>
                            <%= cat.name %>
                        </option>
                    <% }); %>
                </select>
                <small class="form-text">Required. Choose the category for this item.</small>
            </div>

            <div class="form-group">
                <label for="name">Item Name *</label>
                <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    value="<%= item.name || '' %>" 
                    class="form-control"
                    placeholder="e.g., iPhone 15 Pro, PlayStation 5..."
                    required
                >
                <small class="form-text">Required. The display name of the item.</small>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label for="brand">Brand</label>
                <input 
                    type="text" 
                    id="brand" 
                    name="brand" 
                    value="<%= item.brand || '' %>" 
                    class="form-control"
                    placeholder="e.g., Apple, Samsung, Sony..."
                >
            </div>

            <div class="form-group">
                <label for="model">Model</label>
                <input 
                    type="text" 
                    id="model" 
                    name="model" 
                    value="<%= item.model || '' %>" 
                    class="form-control"
                    placeholder="e.g., A3104, CFI-2000..."
                >
            </div>

            <div class="form-group">
                <label for="sku">SKU (Stock Keeping Unit)</label>
                <input 
                    type="text" 
                    id="sku" 
                    name="sku" 
                    value="<%= item.sku || '' %>" 
                    class="form-control"
                    placeholder="e.g., APL-IP15P-256, SON-PS5-STD..."
                >
                <small class="form-text">Unique identifier for this item.</small>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                <label for="price">Price ($)</label>
                <input 
                    type="number" 
                    id="price" 
                    name="price" 
                    value="<%= item.price || '0.00' %>" 
                    class="form-control"
                    step="0.01"
                    min="0"
                >
            </div>

            <div class="form-group">
                <label for="stock_quantity">Stock Quantity</label>
                <input 
                    type="number" 
                    id="stock_quantity" 
                    name="stock_quantity" 
                    value="<%= item.stock_quantity || '0' %>" 
                    class="form-control"
                    min="0"
                >
            </div>

            <div class="form-group">
                <label for="image_url">Image URL</label>
                <input 
                    type="url" 
                    id="image_url" 
                    name="image_url" 
                    value="<%= item.image_url || '' %>" 
                    class="form-control"
                    placeholder="https://example.com/image.jpg"
                >
            </div>
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea 
                id="description" 
                name="description" 
                rows="4" 
                class="form-control"
                placeholder="Describe this item..."><%= item.description || '' %></textarea>
        </div>

        <div class="form-group">
            <label for="specifications">Specifications (JSON)</label>
            <textarea 
                id="specifications" 
                name="specifications" 
                rows="4" 
                class="form-control"
                placeholder='{"screen": "6.1 inches", "storage": "256GB", "ram": "8GB"}'
            ><%= item.specifications ? JSON.stringify(item.specifications, null, 2) : '' %></textarea>
            <small class="form-text">Enter specifications as JSON format. Example: {"screen": "6.1 inches", "storage": "256GB"}</small>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Create Item
            </button>
            <a href="/items" class="btn btn-secondary">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>
