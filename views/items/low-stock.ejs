<div class="page-header">
    <h1><i class="fas fa-exclamation-triangle"></i> Low Stock Items</h1>
    <p class="subtitle">Items with less than 5 units in stock</p>
</div>

<% if (items.length === 0) { %>
    <div class="empty-state">
        <i class="fas fa-check-circle fa-3x"></i>
        <h3>No Low Stock Items</h3>
        <p>All items have sufficient stock levels.</p>
        <a href="/items" class="btn btn-primary">
            <i class="fas fa-boxes"></i> View All Items
        </a>
    </div>
<% } else { %>
    <div class="warning-banner">
        <i class="fas fa-exclamation-circle"></i>
        <p><strong>Warning:</strong> <%= items.length %> item(s) need restocking.</p>
    </div>

    <div class="table-container">
        <table class="table">
            <thead>
                <tr>
                    <th>Item</th>
                    <th>Category</th>
                    <th>Current Stock</th>
                    <th>Price</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% items.forEach(item => { %>
                    <tr>
                        <td>
                            <strong><%= item.name %></strong>
                            <% if (item.brand) { %>
                                <br><small class="text-muted"><%= item.brand %></small>
                            <% } %>
                        </td>
                        <td><%= item.category_name %></td>
                        <td>
                            <span class="badge <%= item.stock_quantity === 0 ? 'badge-danger' : 'badge-warning' %>">
                                <%= item.stock_quantity %> units
                            </span>
                        </td>
                        <td>$<%= parseFloat(item.price).toFixed(2) %></td>
                        <td>
                            <% if (item.stock_quantity === 0) { %>
                                <span class="status out-of-stock">Out of Stock</span>
                            <% } else if (item.stock_quantity < 3) { %>
                                <span class="status critical">Critical</span>
                            <% } else { %>
                                <span class="status low">Low</span>
                            <% } %>
                        </td>
                        <td>
                            <div class="table-actions">
                                <a href="/items/<%= item.id %>/edit" class="btn btn-warning btn-sm">
                                    <i class="fas fa-edit"></i> Update Stock
                                </a>
                                <a href="/items/<%= item.id %>" class="btn-icon" title="View">
                                    <i class="fas fa-eye"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
<% } %>
