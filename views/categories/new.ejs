<div class="page-header">
    <h1><i class="fas fa-plus-circle"></i> Create New Category</h1>
    <a href="/categories" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Categories
    </a>
</div>

<div class="form-container">
    <form action="/categories" method="POST" class="form">
        <div class="form-group">
            <label for="name">Category Name *</label>
            <input 
                type="text" 
                id="name" 
                name="name" 
                value="<%= category.name || '' %>" 
                class="form-control"
                placeholder="e.g., Smartphones, Tablets, Computers..."
                required
            >
            <small class="form-text">Required. Choose a descriptive name for the category.</small>
        </div>

        <div class="form-group">
            <label for="description">Description</label>
            <textarea 
                id="description" 
                name="description" 
                rows="4" 
                class="form-control"
                placeholder="Describe this category..."><%= category.description || '' %></textarea>
            <small class="form-text">Optional. Add a description to help identify this category.</small>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Create Category
            </button>
            <a href="/categories" class="btn btn-secondary">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>
