    <div class="container">
        <nav class="navbar">
            <a href="/" class="logo">
                <i class="fas fa-store"></i>
                <span>ElectroStore</span>
            </a>
            <ul class="nav-links">
                <li><a href="/" class="<%= title === 'Dashboard' ? 'active' : '' %>">
