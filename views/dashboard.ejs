<div class="dashboard">
    <div class="hero" style="background: linear-gradient(135deg, var(--primary), var(--secondary)); color: white; padding: 3rem; border-radius: 12px; margin-bottom: 2rem; text-align: center;">
        <h1 style="font-size: 2.5rem; margin-bottom: 1rem;">
            <i class="fas fa-store"></i> Electronic Store Inventory
        </h1>
        <p style="font-size: 1.2rem; opacity: 0.9;">Welcome to your inventory management system</p>
    </div>

    <div class="dashboard-grid">
        <div class="dashboard-card">
            <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem;">
                <div style="width: 50px; height: 50px; background: var(--primary); border-radius: 12px; display: flex; align-items: center; justify-content: center; color: white;">
                    <i class="fas fa-boxes"></i>
                </div>
                <div>
                    <div style="color: var(--gray);">Total Items</div>
                    <div style="font-size: 2rem; font-weight: bold;"><%= stats.totalItems || 0 %></div>
                </div>
            </div>
            <div style="border-top: 1px solid #e5e7eb; padding-top: 1rem;">
                <i class="fas fa-dollar-sign"></i> Total Value: $<%= (stats.totalValue || 0).toFixed(2) %>
            </div>
        </div>

        <div class="dashboard-card">
            <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem;">
                <div style="width: 50px; height: 50px; background: var(--secondary); border-radius: 12px; display: flex; align-items: center; justify-content: center; color: white;">
                    <i class="fas fa-folder"></i>
                </div>
                <div>
                    <div style="color: var(--gray);">Categories</div>
                    <div style="font-size: 2rem; font-weight: bold;"><%= stats.totalCategories || 0 %></div>
                </div>
            </div>
            <div style="border-top: 1px solid #e5e7eb; padding-top: 1rem;">
                <i class="fas fa-tags"></i> <%= stats.categoriesWithItems || 0 %> have items
            </div>
        </div>

        <div class="dashboard-card">
            <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem;">
                <div style="width: 50px; height: 50px; background: var(--warning); border-radius: 12px; display: flex; align-items: center; justify-content: center; color: white;">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <div>
                    <div style="color: var(--gray);">Low Stock</div>
                    <div style="font-size: 2rem; font-weight: bold; color: var(--warning);">
                        <%= stats.lowStockItems || 0 %>
                    </div>
                </div>
            </div>
            <div style="border-top: 1px solid #e5e7eb; padding-top: 1rem;">
                <a href="/low-stock" style="color: var(--primary); text-decoration: none;">View items →</a>
            </div>
        </div>

        <div class="dashboard-card">
            <div style="display: flex; align-items: center; gap: 1rem; margin-bottom: 1rem;">
                <div style="width: 50px; height: 50px; background: var(--success); border-radius: 12px; display: flex; align-items: center; justify-content: center; color: white;">
                    <i class="fas fa-history"></i>
                </div>
                <div>
                    <div style="color: var(--gray);">Today's Changes</div>
                    <div style="font-size: 2rem; font-weight: bold;"><%= stats.todaysChanges || 0 %></div>
                </div>
            </div>
            <div style="border-top: 1px solid #e5e7eb; padding-top: 1rem;">
                <a href="/changes" style="color: var(--primary); text-decoration: none;">View activity →</a>
            </div>
        </div>
    </div>

    <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 1rem; margin-top: 2rem;">
        <a href="/items/new" style="text-decoration: none;">
            <div class="dashboard-card" style="text-align: center;">
                <i class="fas fa-plus-circle" style="font-size: 2rem; color: var(--primary); margin-bottom: 1rem;"></i>
                <h3>Add Item</h3>
                <p style="color: var(--gray);">Create new product</p>
            </div>
        </a>
        <a href="/categories/new" style="text-decoration: none;">
            <div class="dashboard-card" style="text-align: center;">
                <i class="fas fa-folder-plus" style="font-size: 2rem; color: var(--secondary); margin-bottom: 1rem;"></i>
                <h3>Add Category</h3>
                <p style="color: var(--gray);">Create new category</p>
            </div>
        </a>
        <a href="/items" style="text-decoration: none;">
            <div class="dashboard-card" style="text-align: center;">
                <i class="fas fa-search" style="font-size: 2rem; color: var(--success); margin-bottom: 1rem;"></i>
                <h3>Browse All</h3>
                <p style="color: var(--gray);">View inventory</p>
            </div>
        </a>
    </div>
</div>
